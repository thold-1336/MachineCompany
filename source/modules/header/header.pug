mixin header(page)
  header
    .topbar
      .container
        .row
          .col-sm-6.d-flex.justify-content-center.justify-content-sm-start
            .topbar__social
              +social-header('facebook', 'google-plus', 'instagram', 'twitter')
          .col-sm-6.d-flex.justify-content-sm-end.justify-content-center.border-top.border-md-none
            .topbar__action
              ul.list-inline.list-unstyled
                li.list-inline-item
                  a(href="login.html", title="") Đăng nhập
                li.list-inline-item
                  a(href="register.html", title="") Đăng ký
    .topbar-bottom
      .container
        .row.d-flex.justify-content-between.align-items-center
          .col-sm-2
            .topbar-bottom__logo
              a(href="index.html", title="logo", class="d-block w-100 text-center")
                img(src="images/logo.jpg", alt="logo", class="img-fluid")
          .col-sm-6
            .topbar-bottom__hotline.d-flex.justify-content-center.my-3.my-md-0
              .topbar-bottom__content.float-left.mr-3.mr-sm-5.pr-md-5.pr-sm-0
                h3 Hotline:
                p  (04) 9500 9650 - (04) 9500 8850
              .topbar-bottom__content.float-left
                h3 Đặt hàng nhanh
                p  (04) 9500 9650 - (04) 9500 8850
          .col-sm-4
            form(action="#", method="get", class="topbar-bottom__search")
              .form-group.mb-1
                input(type="text", class="form-control", placeholder="Tìm kiếm...")
                button(type="submit", class="btn")
                  i.fa.fa-search
    .menu
      .container
        nav(class="navbar navbar-expand-lg navbar-dark")
          button(
            class="navbar-toggler" 
            type="button" 
            data-toggle="collapse" 
            data-target="#navbarSupportedContent" 
            aria-controls="navbarSupportedContent" 
            aria-expanded="false" 
            aria-label="Toggle navigation"
            )
              span(class="navbar-toggler-icon")
          div(class="collapse navbar-collapse" id="navbarSupportedContent")
            ul(class="navbar-nav  menu__main")
              li(class="nav-item active")
                a(class="nav-link", href="index.html", title="") TRANG CHỦ
              li.nav-item.d-none.d-lg-block
                a(class="nav-link", href="#", title="") GIỚI THIỆU
                +dropdown-menu()
              li.nav-item.d-inline-block.d-lg-none
                a(class="nav-link", href="#introduce", title="", data-toggle="collapse") GIỚI THIỆU
                  i.fa.fa-caret-down
                +dropdown-menu()
              li.nav-item.d-none.d-lg-inline-block
                a(class="nav-link", href="product.html", title="") SẢN PHẨM
                +mega-menu()
              li.nav-item.d-inline-block.d-lg-none
                a(class="nav-link", href=".mega-menu-mobile", title="", data-toggle="collapse") SẢN PHẨM
                  i.fa.fa-caret-down
                +mega-menu-mobile()
              li.nav-item
                a(class="nav-link", href="#", title="") TIN KHUYẾN MẠI
              li.nav-item
                a(class="nav-link", href="#", title="") DỊCH VỤ
              li.nav-item
                a(class="nav-link", href="#", title="") LIÊN HỆ
          .menu__cart.ml-auto
            a(class="nav-link", href="cart.html", title="")
              span.badge 0
              i.fa.fa-shopping-basket
            ul.list-group.shadow.cart-content
              - for(let x = 1; x < 4; x++)
                li.list-group-item
                  .media
                    img(src="images/product-promo" + x + '.jpg', alt="", class="img-fluid")
                    .media-body.ml-3
                      a(href="single-product.html", title="") MÁY KHOAN BLACK DECKER
                      a(aria-hidden="true", class="close float-right rounded-circle border")
                        i.fa.fa-times
                      span.product__price.d-block #[span.cart-quantity 1 x ] 1.250.000 Đ
              li.list-group-item.text-right
                p
                  span tổng tiền: 
                  span.product__price 4.560.000 Đ
                a(href="#", title="thanh toán") thanh toán